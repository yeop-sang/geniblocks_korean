#tutorial
  position: fixed
  top: 0
  left: 0
  font-family: 'Yanone Kaffeesatz'
  font-size: 1rem
  transition: background-color 1s
  width: 100%
  height: 100%
  z-index: 200
  background-color: rgba(0,0,0,0.7)

  .tutorial-content
    font-family: 'Pretendard-Regular', 'Yanone Kaffeesatz', sans-serif
    position: absolute
    top: 650px
    left: 150px
    width:350px
    border-radius: 18px
    border: 4px solid white
    background-color: rgba(0,0,0,0.5)
    color: white
    padding:20px
    box-shadow: 0px 0px 35px #000;

    // Positioning of tutorial popups follows pattern of "vertical-horizontal" position layout

    &.top-left
      top: 150px
      left: 50px
    &.top-center
      top: 150px
      left: 760px
    &.top-right
      top: 150px
      left: 1330px

    &.middle-left
      top: 370px
      left: 50px
    &.middle-center
      top: 370px
      left: 760px
    &.middle-right
      top: 330px
      left: 1330px

    &.bottom-left
      top: 800px
      left: 50px
    &.bottom-center
      top: 800px
      left: 760px
    &.bottom-right
      top: 800px
      left: 1350px

    .tutorial-short
      font-size: 1.7rem
      padding-bottom: 10px
    .tutorial-long
      font-size: 1.4rem
    .tutorial-show-more
      font-size: 1.1rem
      margin: -10px 0 0 100px
      cursor: pointer
      text-decoration: underline

    .forward-back-buttons
      display: flex
      justify-content: flex-end
      padding-top: 10px
      .tutorial-navigate
        height: 34px
        width: 80px
        background-color: #ffffff
        border-radius: 20px
        color:black
        text-align:center
        font-size: 1.6rem
        cursor: pointer

        &.prev
          margin-right: auto;


    .tutorial-close
      position: absolute
      top: 5px
      right: 5px
      width: 20px
      height: 20px
      border-radius: 20px
      border: 2px solid white
      text-align: center
      color: white
      cursor: pointer

.tutorial
  z-index:201 !important