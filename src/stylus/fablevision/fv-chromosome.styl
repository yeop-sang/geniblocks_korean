.fv-layout

  .fv-chromosome-image
    height: 78px
    width: 27px
    background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_filled.png')
    background-size: contain
    background-repeat: no-repeat

    &.chromosome-y
      height: 55px
      width: 27px
      background-size: contain
      background-repeat: no-repeat
      background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half_filled.png')

    &.small
      background: url('../resources/fablevision/layout-c/chromosome_lite.png')
      background-size: contain
      background-repeat: no-repeat
      height: 122px
      width: 20px

      &.chromosome-x
        background: url('../resources/fablevision/layout-c/chromosome_lite.png')
        background-size: contain
        background-repeat: no-repeat

      &.chromosome-y
        height: 74px
        width: 20px
        background: url('../resources/fablevision/layout-c/chromosome_half_lite.png')
        background-size: contain
        background-repeat: no-repeat

  .fv-chromosome-image.empty
  .parent .fv-chromosome-image.bold
    background: url('../resources/fablevision/layout-c/egg_sperm_chromosome.png')
    background-size: contain
    background-repeat: no-repeat

    &.chromosome-y
      height: 55px
      width: 27px
      background: url('../resources/fablevision/layout-c/egg_sperm_chromosome_half.png')
      background-size: contain
      background-repeat: no-repeat

    &.small
      height: 122px
      width: 20px
      background: url('../resources/fablevision/layout-c/chromosome_dark.png')
      background-size: contain
      background-repeat: no-repeat

      &.chromosome-y
        height: 74px
        width: 20px
        background: url('../resources/fablevision/layout-c/chromosome_half_dark.png')
        background-size: contain
        background-repeat: no-repeat

  .geniblocks.fv-gene-label
    font-family: 'Yanone Kaffeesatz'
    font-size: 1.5rem
    color: white
    position: absolute
    display: flex
    flex-direction: row
    justify-content: flex-end

    &.m
      margin-top: 10px
    &.w
      margin-top: 82px
    &.fl
      margin-top: 10px
    &.hl
      margin-top: 82px

  .geniblocks.chromosome-container .items.ltl .labels
    justify-content: flex-start
    padding-left: 25px

  .geniblocks.chromosome-container .items.rtl .labels
    justify-content: flex-start
    padding-right: 25px

  .line
    position: absolute
    background-color: #fff
    width: 20px
    height: 2px
    top: 15px
    left: -27px

  .items.rtl .line
    margin-left: auto
    left: 0px
    right: -27px