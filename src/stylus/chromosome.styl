.geniblocks.chromosome-container
  display: flex
  .items
    display: flex
    .labels
      display: flex
      flex-direction: column
      justify-content: space-around
      width: 110px
      padding-left: 10px
      padding-right: 10px
      align-items: flex-start;
      div
        order: 0
        flex: 0 1 40px
        align-self: auto
      select
        height: 20px
    .alleles
      display: flex
      flex-direction: column
      justify-content: space-around


    &.rtl
      flex-direction: row-reverse
      .labels
        align-items: flex-end;
